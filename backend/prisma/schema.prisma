generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("client")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model PasswordReset {
  id            String   @id @default(uuid())
  email         String   @unique
  code          String
  expiresAt     DateTime
  attempts      Int      @default(1)
  lastAttemptAt DateTime @default(now())
  createdAt     DateTime @default(now())

  @@map("password_resets")
}

model RevokedToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  revokedAt DateTime @default(now())

  @@map("revoked_tokens")
  @@index([userId])
  @@index([expiresAt])
}
